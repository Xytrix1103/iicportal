<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:windowSoftInputMode="adjustNothing"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/headerIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/headerIcon"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/facilityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/header">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:contentPadding="10dp"
            app:cardCornerRadius="120dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullNameLabel"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/barcodeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/barcode" />

        <TextView
            android:id="@+id/studentIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullNameLabel"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/profileUpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Update"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="40dp"
            app:elevation="20dp" />

        <Button
            android:id="@+id/orderHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order History"
            android:layout_marginBottom="20dp"
            app:cornerRadius="40dp"
            app:elevation="20dp" />
        <Button
            android:id="@+id/bookingHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking History"
            android:layout_marginBottom="20dp"
            app:cornerRadius="40dp"
            app:elevation="20dp" />

        <Button
            android:id="@+id/contactBtn"
            android:theme="@style/Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/contact_us"
            android:layout_marginBottom="20dp"
            app:cornerRadius="40dp"
            app:elevation="20dp" />

        <Button
            android:id="@+id/logoutBtn"
            android:theme="@style/Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Logout"
            android:layout_centerHorizontal="true"
            app:cornerRadius="40dp"
            app:elevation="20dp" />

    </LinearLayout>
    </RelativeLayout>

