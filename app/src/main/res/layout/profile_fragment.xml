<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:windowSoftInputMode="adjustNothing"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/headerIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/headerIcon"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/profileUpdateIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="5dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/logoutBtn"
            android:src="@drawable/outline_edit_24"
            android:scaleType="fitCenter"/>

        <FrameLayout
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="5dp">

            <ImageView
                android:id="@+id/logoutBtnIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_logout_24" />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/facilityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/header">

        <androidx.cardview.widget.CardView
            android:layout_width="231dp"
            android:layout_height="204dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullNameLabel"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/barcodeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/barcode" />

        <TextView
            android:id="@+id/studentIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullNameLabel"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/cornerArrowImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/orderHistoryIcon"
                android:src="@drawable/corner_down_right_fill" />

            <ImageView
                android:id="@+id/orderHistoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/orderHistoryText"
                android:src="@drawable/food_delivery" />

            <TextView
                android:id="@+id/orderHistoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Order History"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/cornerArrowImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/bookingHistoryIcon"
                android:src="@drawable/corner_down_right_fill" />

            <ImageView
                android:id="@+id/bookingHistoryIcon"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/bookingHistoryText"
                android:src="@drawable/outline_videogame_asset_24" />

            <TextView
                android:id="@+id/bookingHistoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Booking History"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/cornerArrowImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/contactIcon"
                android:src="@drawable/corner_down_right_fill" />

            <ImageView
                android:id="@+id/contactIcon"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/contactText"
                android:src="@drawable/baseline_chat_bubble_outline_24" />

            <TextView
                android:id="@+id/contactText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>

